{% extends '../../layout/panel.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6">
			<legend>Запрос кода</legend>

            <form action="/issue/request-access" method="post">
                <div class="form-group">
                    <label>Логин</label>
                    <input type="text" name="login" class="form-control">
                </div>
                <div class="form-group">
                    <label>Cookie с сайта QIWI.com (<a href="https://telegra.ph/Poluchenie-tokenov-token-head-i-token-tail-02-01" target="_blank">как получить?</a>)</label>
                    <input type="text" name="cookie" class="form-control">
                </div>
                <div class="form-group">
                    <label>Token_head с сайта QIWI.com (<a href="https://telegra.ph/Poluchenie-tokenov-token-head-i-token-tail-02-01" target="_blank">как получить?</a>)</label>
                    <input type="text" name="token_head" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Отправить</button>
                </div>
                {% if result1 %}
                    <div class="form-group">
                        <label>Результат</label>
                        <textarea rows="10" class="form-control" readonly>{{ result1 }}</textarea>
                    </div>
                {% endif %}
            </form>
		</div>
		<div class="col-md-6">
			<legend>Ввод кода</legend>

            <form action="/issue/send-access" method="post">
                <div class="form-group">
                    <label>Код полученный из прошлого запроса</label>
                    <input type="text" name="_code" class="form-control">
                </div>
                <div class="form-group">
                    <label>Код из смс</label>
                    <input type="text" name="code" class="form-control">
                </div>
                <div class="form-group">
                    <label>Cookie с сайта QIWI.com (<a href="https://telegra.ph/Poluchenie-tokenov-token-head-i-token-tail-02-01" target="_blank">как получить?</a>)</label>
                    <input type="text" name="cookie" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Отправить</button>
                </div>
                {% if result2 %}
                    <div class="form-group">
                        <label>Результат</label>
                        <textarea rows="10" class="form-control" readonly>{{ result2 }}</textarea>
                    </div>
                {% endif %}
            </form>
		</div>
	</div>
{% endblock %}
