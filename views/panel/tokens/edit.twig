{% extends '../../layout/panel.twig' %}

{% block content %}
<legend>Редактирование токена</legend>

<form method="post">
    <div class="form-group">
        <label>Наименование</label>
        <input type="text" name="name" class="form-control" value="{{ token.name }}">
    </div>
    <div class="form-group">
        <label>Callback URL</label>
        <input type="text" name="callback_url" class="form-control" value="{{ token.callback_url }}">
    </div>
    <div class="form-group">
        <label>Токен</label>
        <input type="text" class="form-control" readonly value="{{ token.token }}">
    </div>
    <div class="form-group">
        <input type="checkbox" name="enabled" {{ token.enabled ? ' checked' : '' }}>
        <label>Включено ли</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
{% endblock %}