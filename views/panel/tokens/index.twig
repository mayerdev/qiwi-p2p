{% extends '../../layout/panel.twig' %}

{% block content %}
<legend>API-токены</legend>

<a href="/tokens/create" class="btn btn-primary">Создать токен</a>
<br><br>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Наименование</th>
            <th>Токен</th>
            <th>Callback URL</th>
            <th>Включен</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for item in tokens %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.token }}</td>
                <td>{{ item.callback_url }}</td>
                <td>{{ item.enabled ? 'Да' : 'Нет' }}</td>
                <td>
                    <a href="/tokens/edit?id={{ item._id }}">Редактировать</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}