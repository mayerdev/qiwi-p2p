{% extends '../../layout/panel.twig' %}

{% block content %}
<legend>Редактирование прокси</legend>

<form method="post">
    <div class="form-group">
        <label>IP</label>
        <input type="text" name="ip" class="form-control" value="{{ proxy.ip }}">
    </div>
    <div class="form-group">
        <label>Порт</label>
        <input type="text" name="port" class="form-control" value="{{ proxy.port }}">
    </div>
    <div class="form-group">
        <label>Логин</label>
        <input type="text" name="username" class="form-control" value="{{ proxy.username }}">
    </div>
    <div class="form-group">
        <label>Пароль</label>
        <input type="text" name="password" class="form-control" value="{{ proxy.password }}">
    </div>
    <div class="form-group">
        <label>Выберите дропа</label>
        <select name="drop_id" class="form-control">
            {% for item in drops %}
                <option value="{{ item._id }}" {{ proxy.drop_id == item._id ? 'selected' : '' }}>{{ item.phone }} [enabled={{ item.enabled ? 'true' : 'false' }}]</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
{% endblock %}