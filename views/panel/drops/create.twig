{% extends '../../layout/panel.twig' %}

{% block content %}
<legend>Создание дропа</legend>

<form method="post">
    <div class="form-group">
        <label>Номер телефона без +</label>
        <input type="text" name="phone" class="form-control">
    </div>
    <div class="form-group">
        <label>Пароль</label>
        <input type="text" name="password" class="form-control">
    </div>
    <div class="form-group">
        <label>Access Token</label>
        <input type="text" name="access_token" class="form-control">
    </div>
    <div class="form-group">
        <label>P2P публичный ключ</label>
        <input type="text" name="p2p_public" class="form-control">
    </div>
    <div class="form-group">
        <label>P2P приватный ключ</label>
        <input type="text" name="p2p_secret" class="form-control">
    </div>
    <div class="form-group">
        <label>Минимальная сумма за платёж</label>
        <input type="text" name="min_amount" class="form-control">
    </div>
    <div class="form-group">
        <label>Максимальная сумма за платёж</label>
        <input type="text" name="max_amount" class="form-control">
    </div>
    <div class="form-group">
        <label>Максимальная сумма всех платежей</label>
        <input type="text" name="total_max_amount" class="form-control">
    </div>
    <div class="form-group">
        <label>Максимальное количество успешных платежей</label>
        <input type="text" name="total_max_payments" class="form-control">
    </div>
    <div class="form-group">
        <input type="checkbox" name="enabled">
        <label>Включено ли</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Создать</button>
    </div>
</form>
{% endblock %}