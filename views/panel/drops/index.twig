{% extends '../../layout/panel.twig' %}

{% block content %}
<legend>Дропы</legend>

<a href="/drops/create" class="btn btn-primary">Создать дропа</a>
<br><br>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Телефон</th>
            <th>Сумма платежей</th>
            <th>Количество успешных платежей</th>
            <th>Включен</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for item in drops %}
            <tr>
                <td>{{ item.phone }}</td>
                <td>{{ item.total_amount }} RUB</td>
                <td>{{ item.total_payments }}</td>
                <td>{{ item.enabled ? 'Да' : 'Нет' }}</td>
                <td>
                    <a href="/drops/edit?id={{ item._id }}">Редактировать</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}